<configuration>
    <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(%applicationName[%15.15t]){magenta} %clr(${LOG_CORRELATION_PATTERN:-}){magenta}%clr(%-35.35logger{34}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />

    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <logger name="dio.newsfeed" level="debug" />
    <logger name="org.springframework" level="warn" />
    <logger name="org.apache" level="warn" />
    <logger name="org.hibernate" level="warn"/>

    <root level="info">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
